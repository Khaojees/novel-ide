{
  "name": "novel-ide",
  "version": "0.1.0",
  "description": "A Novel Writing IDE with AI integration and Git-friendly workflow",
  "main": "src/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "start-2": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "novel",
    "writing",
    "ide",
    "electron",
    "react",
    "ai",
    "git"
  ],
  "author": "Khaojees",
  "license": "MIT",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "zustand": "^4.4.1",
    "@tiptap/react": "^2.1.7",
    "@tiptap/starter-kit": "^2.1.7",
    "@tiptap/extension-placeholder": "^2.1.7",
    "@tiptap/extension-character-count": "^2.1.7",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.263.1",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.4.2",
    "@types/js-yaml": "^4.0.5",
    "typescript": "^4.9.5",
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.khaojees.novel-ide",
    "productName": "Novel IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}


